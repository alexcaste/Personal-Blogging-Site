<% content_for(:title, @skill.name) %>
<div class ="container">
  <div class="page-header">
    <h1><%= yield(:title) %></h1>
  </div>

<h4><%= @skill.description %></h4>

<% if @skill.projects.any? %>
  <h4>Projects:</h4>

  <ul>
    <% @skill.projects.each do |project| %>
      <li class="well">
        <span class="lead"><%= project.name %>:</span>
        <%= project.description %>
        <span class="col-md-offset-1">
          <%= link_to "Edit", edit_skill_project_path(@skill, project), :class => "btn btn-xs btn-warning" %>
          <%= link_to "Delete", skill_project_path(@skill, project),
                  :data => {:confirm => "Are you sure?",
                  :method => "delete"}, :class => "btn btn-xs btn-danger" %>
        </span>
      </li>
    <% end %>
  </ul>
  <% else %>
  <p>No projects have been added yet.</p>
  <% end %>
<hr>
  <p>
    <%= link_to "Add a project", new_skill_project_path(@skill), :class => "btn btn-sm btn-success" %>
    <%= link_to "Edit Skill", edit_skill_path(@skill), :class => "btn btn-sm btn-warning" %>
    <%= link_to "Delete Skill", skill_path(@skill),
                              :data => {:confirm => "Are you sure?",
                              :method => "delete"}, :class => "btn btn-danger btn-sm " %>

              <%= link_to "Return to Home", skills_path, :class => "btn btn-sm btn-default" %></p>
</div>
