<% content_for(:title, @skill.name) %>
<div class ="container">

<h1><%= @skill.name %></h1>
<h4><%= @skill.description %></h4>

<% if @skill.projects.any? %>
  <h4>Projects:</h4>

  <ul>
    <% @skill.projects.each do |project| %>
    <li>
      <%= project.name %>:
      <%= project.description %>


      <%= link_to "Edit", edit_skill_project_path(@skill, project) %>
      <%= link_to "Delete", skill_project_path(@skill, project),
              :data => {:confirm => "Are you sure?",
              :method => "delete"} %>
    </li>
    <% end %>
  </ul>
  <% else %>
  <p>No projects have been added yet.</p>
  <% end %>

  <p><%= link_to "Add a project", new_skill_project_path(@skill) %></p>
  <p><%= link_to "Delete Skill", skill_path(@skill),
              :data => {:confirm => "Are you sure?",
              :method => "delete"} %> </p>

  <p><%= link_to "Return to Home", skills_path %></p>
</div>
