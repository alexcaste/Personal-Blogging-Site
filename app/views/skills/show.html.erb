<% content_for(:title, @skill.name) %>
<div class ="container">
  <div class="page-header">
    <h1><%= yield(:title) %>
    <% if can? :update, @skill %>

      <span class="pull-right">
        <%= link_to "Edit", edit_skill_path(@skill), :class => "btn btn-xs btn-warning" %>
        <%= link_to "Delete", skill_path(@skill),
                                  :data => {:confirm => "Are you sure?",
                                  :method => "delete"}, :class => "btn btn-danger btn-xs " %>
      </span>
    <% end %>
    </h1>
  </div>

<p>
  <span class="lead">
    Description:
  </span>
  <%= @skill.description %>
</p>
<% if can? :update, @skill %>
    <span class="pull-right">
      <%= link_to "Add a Project", new_skill_project_path(@skill), :class => "btn btn-xs btn-success" %>
    </span>
<% end %>
<% if @skill.projects.any? %>
  <h3>Projects:
</h3>

  <ul class="list-unstyled">
    <% @skill.projects.each do |project| %>
      <li class="well well-sm text-center">
        <span class="lead"><%= link_to project.name, skill_project_path(@skill, project) %></span>
      </li>
    <% end %>
  </ul>
  <% else %>
  <p>No projects have been added yet.</p>
  <% end %>
<hr>
  <p><%= link_to "Return to Home", skills_path, :class => "btn btn-sm btn-block btn-default" %></p>
</div>
