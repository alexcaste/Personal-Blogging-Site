<%= content_for :title, "Posts" %>
<h1 class="page-header text-center">Current Posts</h1>

<% @posts.each do |post| %>
    <div class="panel panel-default">
      <div class="panel-body">
        <p class="lead text-center "> <strong><%= link_to post.title, post_path(post) %></strong></p>
          <div class=" well ">
            <%= post.summarize %>
            <br>

          </div>
            <div style="float: left;">
              <%= post.comments.length %> Comments(s)
            </div>
            <div class="pull-right">
              <small>Posted by <cite><%= link_to post.user.first_name, user_path(post.user) %></cite></small>
            </div>
      </div>
    </div>

<% end %>
